<article>
    <a href="">&larr; Back to the Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input type="text" name="post-title" value="{{review.title}}" />
            <br><br>
            <textarea id="post-text" name="post-text"></textarea>
            <p>{{review.review_text}}</p>
        </div>
        <div>
            <a href="">{{post.review.length}} {{format_plural "review" post.review.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-review.js"></script>
<script src="/javascript/delete-review.js"></script>
<script src="/javascript/review.js"></script>