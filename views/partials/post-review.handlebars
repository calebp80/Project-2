<article class="post">
    <div class="title">
        <h2>{{title}}</h2>
        <h4>{{user.username}}</h4>
        <span>{{format_date created_at}}</span>
        <p>{{post_text}}</p>
    </div>

    <div class="meta">
        <a href="">{{review.length}} {{format_plural "comment" review.length}}</a>
    </div>
</article>



<script src="javascript/review.js"></script>
<script src="javascript/add-review.js"></script>
<script src="javascript/delete-review.js"></script>
<script src="javascript/edit-review.js"></script>