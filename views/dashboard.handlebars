<section>
    <h2>Reviews on Spooky Loactions</h2>

    <form class="">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" />
        </div>

        <button type="button" class="btn btn-outline-primary" id="search-btn"><a href="">Search Title</a></button>
    </form>
</section>

<div class="modal-body">
    <div class="modal fade container-fluid modal-bg" id="createPostModal" tabindex="-1" role="dialog"
        aria-labelledby="createPostModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content modal-post container">
                <div class="modal-header row">
                    <h5 class="modal-title" id="createPostModalLabel">I'm Scared Now...</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                </div>

                <div class="modal-body row">
                    <div class="col-md-6">
                        <h4 id="seached-title" class=""></h4>

                    </div>

                    <div class="container-fluid col-md-6 ml-auto">
                        <div class="">
                            <label for="post-content">What did you think of our Locations?</label>
                            <textarea name="post-content" id="post-review" cols="4" rows="25"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer row">
                    <button type="button" class="btn btn-primary btn-post">Post Review</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h3>
        Your Previous Reviews Here
    </h3>
</div>

<div>
    {{#each posts as |post|}}
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link pl-2">[Edit Post]</a>
    {{/each}}
</div>

<script src="../public/javascript/add-post.js"></script>